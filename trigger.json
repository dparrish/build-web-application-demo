{
  "triggerTemplate" : {
    "repoName" : "[PROJECT]",
    "projectId" : "[PROJECT]",
    "branchName" : ".*"
  },
  "description": "Build on push",
  "build" : {
    "images" : [
      "gcr.io/[PROJECT]/$REPO_NAME:$COMMIT_SHA"
    ],
    "steps" : [
      {
        "args" : [ "build", "-t", "gcr.io/[PROJECT]/$REPO_NAME:$COMMIT_SHA", "." ],
        "name" : "gcr.io/cloud-builders/docker"
      }
    ]
  }
}
